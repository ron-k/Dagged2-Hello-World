<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtCity"
        style="@style/accented_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="Paris" />

    <ImageView
        android:id="@+id/imgConditionIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtCity"
        android:layout_toRightOf="@+id/txtCity" />

    <TextView
        android:id="@+id/txtTemp"
        style="@style/accented_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgConditionIcon"
        android:layout_toRightOf="@+id/imgConditionIcon"
        android:textSize="24sp"
        tools:text="10 C" />

    <TextView
        android:id="@+id/txtAttribution"
        style="@style/accented_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imgConditionIcon"
        android:layout_margin="8dp"
        android:text="@string/app_name"
        android:textStyle="" />

</RelativeLayout>
